<%- contentFor('body') %>
<!-- MAIN -->
<main>
    <div class="container">
        <div class="row">

            <!-- ARTICLES -->
            <div class="col-lg-8 col-xs-12">
                <section class="articles">
                <% posts.forEach(function(post){ %>
                    <article class="<%- post.article_class %>">
                        <div class="articles-header">
                            <time datetime="2016-10-11"><%- post.date %></time>
                            <span class="articles-header-category"><a href="#" title=""><%- post.category_name %></a></span>
                        </div>
                        <div class="articles-content">
                            <h1><a href="blog_post.html" title=""><%- post.title %></a></h1>
                            <p><%- post.excerpt %></p>
                        </div>
                        <div class="articles-footer">
                            <a title="" class="btn" href="blog_post.html">Read more</a>

                        </div>
                    </article>
                  <% }); %>



                    <!-- PAGINATION -->
                    <nav aria-label="...">
                      <%- pagination %>
                  </nav>

                </section>
            </div>


            <div class="aside-blocks col-lg-4 col-xs-12">
                <!-- AUTHOR -->
                <%- include('partials/right-block-author', {author_profile} ) %>

                <!-- Categories block -->
                <%- include('partials/right-block-categories') %>

